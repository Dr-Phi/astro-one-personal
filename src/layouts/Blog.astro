---
import type { MarkdownLayoutProps } from "astro";

import Main from "./Main.astro";

type Props = MarkdownLayoutProps<{
  // Define the expected frontmatter props here
  title: string;
  poster: string;
  subtitle: string;
}>;

// get properties from the md frontmatter
const { poster, title, subtitle } = Astro.props.frontmatter;
---

<Main title="Elias Rojas | Blog">
  <figure class="figure">
    <img src={poster} alt="" class="figure__image" />
  </figure>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>

  <slot />
</Main>

<style>
  @media (max-width: 602px) {
    .figure {
      max-height: 300px;
    }
    h1 {
      font-size: 2.5rem;
      text-align: center;
      margin-bottom: 2rem;
    }
    h2 {
      font-size: 1rem;
      margin-left: 2rem;
    }
    h1 + h2 {
      margin-bottom: 1rem !important;
    }
  }
  h1 + h2 {
    margin-bottom: 3rem;
  }
  .figure {
    margin: 0;
    height: 480px;
  }
  .figure__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }
  .figure__caption {
    font-size: 0.9rem;
  }
</style>
